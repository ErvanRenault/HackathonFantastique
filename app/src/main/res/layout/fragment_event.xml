<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mitic.ervan.hackathonfantastique.event.Event">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="261dp"
                app:srcCompat="@android:drawable/picture_frame"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nomevent"
                    android:paddingTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nom de l'evenement"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/adresseevent"
                    android:paddingTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresse VRAIMENT TRES TRES TRES TRES TRES TRES LONGUE"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/dateevent"
                    android:paddingTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/heureevent"
                    android:paddingTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="heure"
                    android:textAlignment="center"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/nomorganisateur"
                    android:text="Nom de l'organisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <Button
                        android:text="Map"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.06"
                        android:onClick="mapDetail" />

                    <TextView
                        android:text="adresseMail"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:text="telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/telephoneevent"
                        android:gravity="center"
                        android:paddingBottom="10dp" />

                    <CheckBox
                        android:text="Je participe"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/checkBox"
                        android:layout_weight="0.22" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="47dp">

                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_width="228dp"
                            android:layout_height="40dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:stepSize="1"
                            android:isIndicator="true"
                            android:layout_weight="1" />

                        <Button
                            android:text="F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button7"
                            android:layout_weight="1" />

                        <Button
                            android:text="T"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
